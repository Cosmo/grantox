<div class="cms-toolbar">
  <div class="cms-toolbar-visual-editor">
    <% if session[:visual_edit] %>
      <span class="cms-toolbar-visual-editor-on">on</span>
      <a class="cms-toolbar-visual-editor-off" href="/visual_edit_mode/?state=off">off</a>
    <% else %>
      <a class="cms-toolbar-visual-editor-on" href="/visual_edit_mode/?state=on">on</a>
      <span class="cms-toolbar-visual-editor-off">off</span>
    <% end %>
    Visual Editor
  </div>
  
  <div class="cms-toolbar-page-info">
    <%= @page.name %>
    <%= @page.title.present? ? "(#{@page.title})" : "" %>
    v<%= @page.version %>
  </div>
  
  <div class="cms-toolbar-page-actions">
    <%= link_to "Shrink", "#", id: "cms-toolbar-page-actions-shrink" %>
    <%= link_to "Preview", "?preview=true" %>
    <%= link_to "Publish", publish_page_path(@page), method: "post" %>
    <%= link_to "Edit", edit_page_path(@page) %>
  </div>
</div>