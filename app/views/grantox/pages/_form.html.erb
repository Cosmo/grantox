<div class="form-group">
  <%= f.label :name, class: "control-label" %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<hr />

<div class="form-group">
  <%= f.label :title, class: "control-label" %>
  <%= f.text_field :title, placeholder: "Defaults to 'name'", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :path, class: "control-label" %>
  <%= f.text_field :path, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :template_file_name, class: "control-label" %>
  <%= f.select :template_file_name, Grantox::Layout.installed, {}, class: "form-control" %>
</div>

<%= hidden_field_tag :section_id, @section_id %>