<%= form_for @content_block do |f| %>
  <%= render partial: "grantox/content_blocks/#{@content_block.class.path_name.pluralize}/form", locals: { f: f } %>
  
  <% if @container.present? && @page_id.present? %>
    <%= hidden_field_tag :container, @container %>
    <%= hidden_field_tag :page_id, @page_id %>
  <% end %>
  
  <%= f.submit %>
<% end %>